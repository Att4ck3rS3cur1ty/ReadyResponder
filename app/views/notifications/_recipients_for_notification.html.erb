<div class="accordion">
  <h3>Recipients (<%= @notification.recipients.count %>) </h3>
  <div>
    <table id="notification_recipients" class="table table-striped table-bordered">
      <thead>
        <tr>
          <th>Recipient</th>
          <th>Intention</th>
        </tr>
      </thead>
      <tbody>
        <% @notification.recipients.each do |recipient| %>
          <tr>
            <td><%= link_to recipient.name, recipient %></td>
            <td><%= recipient.last_intention %><%= recipient.id %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
