<%= simple_form_for(@notification) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :event_id %>
    <%= f.input :author_id %>
    <%= f.input :status %>
    <%= f.input :channels %>
    <%= f.input :subject %>
    <%= f.input :body %>
    <%= f.input :sent_at %>
    <%= f.input :comments %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
