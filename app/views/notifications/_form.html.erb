<%= simple_form_for(@notification) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.association :event %>
    <%= f.input :channels, :as => :select, :collection => Notification::CHANNELS %>
    <%= f.input :send_trigger, :as => :select, :collection => Notification::SEND_TRIGGERS %>
    <%= f.input :subject %>
    <%= f.input :body %>
    <%= f.association :people, :as => :check_boxes, :collection => Person.active %>
    <%= f.input :comments %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
