<div class="accordion">
  <h3>Responses (<%= @notification.responses.count %>) </h3>
  <div>
    <table id="notification_responses" class="table table-striped table-bordered">
      <thead>
        <tr>
          <th>Recipient</th>
          <th>Intention</th>
        </tr>
      </thead>
      <tbody>
        <% @notification.responses.each do |response| %>
          <tr>
            <td><%= link_to response, response %></td>
            <td><%= response.intention%></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
